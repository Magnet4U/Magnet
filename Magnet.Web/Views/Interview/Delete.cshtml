@model Domain.Entities.Interview

@{
    ViewBag.Title = "Delete";
}
<!-- HOME -->

<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Schedule An Interview</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">/</span>
                    <a href="#">Interview</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Schedule An Interview</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="site-section">
   
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row align-items-center mb-5">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2>Delete An Interview</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }





        <h3>Are you sure you want to delete this interview</h3>
        <div>
            <h4>Interview</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Date Interview
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateInterview)
                </dd>

                <dt>
                    Lieu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.lieu)
                </dd>
                <dt>
                    Candidate
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.idCandidat)
                </dd>

            </dl>




            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">

                    <div class="row">
                        <div class="col-2">
                            @Html.ActionLink("Back to List", "Index")

                            @*<a href="Index" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Back to List</a>*@
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
    </section>