@model Domain.Entities.Interview

@{
    ViewBag.Title = "Create";
}
<!-- HOME -->


<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Schedule An Interview</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">/</span>
                    <a href="#">Interview</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Schedule An Interview</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="site-section">

    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <div class="d-flex align-items-center">
                    <div>
                        <h2>Add An Interview</h2>
                    </div>
                </div>
            </div>

        </div>




        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="row">
                        <h4>Date Interview</h4>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateInterview, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                        @Html.ValidationMessageFor(model => model.DateInterview, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <h4>Lieu</h4>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.lieu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.lieu, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>


            <div class="col-lg-4">


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <a href="Index" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Back to List</a>
                    </div>
                </div>
            </div>

        }
    </div>
</section>