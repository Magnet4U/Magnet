@model Domain.Entities.Question

@{
    ViewBag.Title = "AddAnotherQuestion";
}
<!-- HOME -->

<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Manage Quiz</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">/</span>
                    <a href="#">Quiz</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Manage Quiz</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="site-section">

    <div class="container">


        <div align="center">
            <h3>Add Another Question ?</h3>
            <br /><br />
            @using (Html.BeginForm("AddNewQuestion", "Quiz"))
            {
                <input type="hidden" name="id" value=@ViewBag.id>
                <input class="btn btn-info" type="submit" value="                    Yes                    " />
            }
            <br />
            @using (Html.BeginForm("Index", "Question"))
            {
                <input class="btn btn-danger" type="submit" value="                    No                    " />
            }

        </div>

    </div>
</section>